<div id="new-user-page">
  <div class="header"><h3>Weather-Powered Email</h3></div>
  <div id="alert-container"></div>
  <form id="new-user-form">
    <div class="form-group email">
      <label for="email-input">Email Address</label>
      <input type="text" class="form-control has-danger" id="email-input" aria-describedby="emailHelp" placeholder="Enter email">
      <div class="form-control-msg error" hidden></div>
      <div class="form-control-msg success" hidden></div>
    </div>
    <div class="form-group location">
      <label for="city-select">Location</label>
      <select class="form-control" id="city-select">
        <option value="EMPTY">Where do you live?</option>
        <% @cities.each do |city| %>
          <option value="<%= city.id %>"><%= "#{city.name}, #{city.state}" %></option>
        <% end %>
      </select>
      <div class="form-control-msg error" hidden></div>
    </div>
    <button type="submit" class="btn btn-primary center-block">Subscribe</button>
  </form>
</div>
